<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/divided_line" />

    <com.oywj.usefulviews.ui.views.financial.FinancialCategoryLayout
        android:id="@+id/category_newbie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:categoryDrawable="@mipmap/icon_current_region"
        app:categoryText="@string/newbie_wallet"
        app:showMore="false"
        app:showQuestion="false"
        android:background="@android:color/white"/>

    <include
        layout="@layout/divided_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lines_size"
        android:layout_marginLeft="@dimen/lines_margin"
        android:layout_marginRight="@dimen/lines_margin" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>