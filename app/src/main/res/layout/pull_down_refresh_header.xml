<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    android:gravity="center"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/pull_down_refresh_anim_img"
        android:layout_width="@dimen/pull_down_anim_view_size"
        android:layout_height="@dimen/pull_down_anim_view_size"
        android:layout_margin="@dimen/pull_down_refresh_desc_margin"
        android:src="@drawable/pull_down_refresh_animation"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/pull_down_refresh_anim_img"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pull_down_refresh_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pull_down_refresh_desc"
            android:textSize="@dimen/refresh_desc_txt_size" />

        <TextView
            android:id="@+id/pull_down_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pull_down"
            android:textSize="@dimen/desc_tv_size" />

    </LinearLayout>


</RelativeLayout>